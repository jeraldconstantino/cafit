<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_activity_bg"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/poppins_black"
        android:text="REGISTRATION"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:id="@+id/mainBG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/gray_bg_shape"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/fullNameInputRegisterID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="name"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_fullname_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/mainBG"
        app:layout_constraintStart_toStartOf="@+id/mainBG"
        app:layout_constraintTop_toTopOf="@+id/mainBG"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/userNameInputRegisterID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="username"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_username_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/fullNameInputRegisterID"
        app:layout_constraintStart_toStartOf="@+id/fullNameInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/fullNameInputRegisterID"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/ageInputRegisterID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="age"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_age_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Age"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/sexTextID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userNameInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/passwordInputRegisterID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"

        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/userNameInputRegisterID"
        app:layout_constraintStart_toStartOf="@+id/userNameInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/ageInputRegisterID"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/confirmPasswordInputRegisterID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordInputRegisterID"
        app:layout_constraintStart_toStartOf="@+id/passwordInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputRegisterID"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/agreeTOGID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:buttonTint="#FFC098"
        android:fontFamily="@font/poppins_regular"
        android:text="I agree to the"
        android:textColor="#111111"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordInputRegisterID" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/poppins_black"
        android:onClick="signInUser"
        android:text="SIGN IN"
        android:textColor="#111"
        android:textSize="15sp"
        app:backgroundTint="#FFC098"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/mainBG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainBG"
        app:layout_constraintTop_toBottomOf="@+id/agreeTOGID" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logInRegisterButtonID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:fontFamily="@font/poppins_black"
        android:gravity="start"
        android:onClick="launchLoginActivity"
        android:text="LOG IN"
        android:textColor="#FFC098"
        app:layout_constraintEnd_toEndOf="@+id/mainBG"
        app:layout_constraintStart_toEndOf="@+id/alreadyHaveAccountID"
        app:layout_constraintTop_toBottomOf="@+id/signInID" />

    <TextView
        android:id="@+id/alreadyHaveAccountID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/mainBG"
        app:layout_constraintTop_toBottomOf="@+id/signInID" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/TACRegistrationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:fontFamily="@font/poppins_black"
        android:gravity="start"
        android:onClick="launchTSCDialog"
        android:text="TERMS AND CONDITIONS."
        android:textColor="#5C2A0B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordInputRegisterID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/agreeTOGID"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordInputRegisterID" />

    <TextView
        android:id="@+id/sexTextID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="start"
        android:text="Sex:"
        android:textColor="#111"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/sexRB"
        app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID" />

    <RadioGroup
        android:id="@+id/sexRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/userNameInputRegisterID"
        app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID">

            <RadioButton
                android:id="@+id/maleRBID"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="13dp"
                android:buttonTint="#FFC098"
                android:fontFamily="@font/poppins_regular"
                android:text="Male"
                android:textColor="#111"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/femaleRBID"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="13dp"
                android:buttonTint="#FFC098"
                android:fontFamily="@font/poppins_regular"
                android:text="Female"
                android:textColor="#111"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/userNameInputRegisterID"
                app:layout_constraintStart_toEndOf="@+id/maleRBID"
                app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID"
                tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>