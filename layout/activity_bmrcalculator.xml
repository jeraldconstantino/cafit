<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bmr_wall"
    tools:context=".BMICalculatorActivity">

    <View
        android:id="@+id/mainBG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/calculator_bg"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBMI" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="97dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bmi_upper_bg"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="291dp"
        android:layout_height="129dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cafit_bmi_logo"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="-21dp"
        android:backgroundTint="#111111"
        android:onClick="launchCalculatorsActivity"
        app:backgroundTint="#E3E3DC"
        app:cornerRadius="60dp"
        app:icon="@drawable/ic_baseline_keyboard_backspace_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="#FFC098"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/poppins_black"
        android:shadowColor="#FFE5B4"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="   BMR Calculator   "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_black"
        android:shadowColor="#FFE5B4"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="GENDER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/mainBG"
        app:layout_constraintTop_toTopOf="@+id/mainBG" />

    <RadioGroup
        android:id="@+id/sexRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-6dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/mainBG"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/mainBG">

        <RadioButton
            android:id="@+id/maleRBBMRID"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:buttonTint="#111"
            android:fontFamily="@font/poppins_regular"
            android:text="Male"
            android:textColor="#111"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/femaleRBBMRID"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="13dp"
            android:buttonTint="#111"
            android:fontFamily="@font/poppins_regular"
            android:text="Female"
            android:textColor="#111"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/userNameInputRegisterID"
            app:layout_constraintStart_toEndOf="@+id/maleRBID"
            app:layout_constraintTop_toBottomOf="@+id/userNameInputRegisterID"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <EditText
        android:id="@+id/BMRWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_weight_icon"
        android:drawableEnd="@drawable/ic_kg"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Weight (in kg)"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/mainBG"
        app:layout_constraintStart_toStartOf="@+id/mainBG"
        app:layout_constraintTop_toBottomOf="@+id/sexRB" />

    <EditText
        android:id="@+id/BMRHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_height_icon"
        android:drawableEnd="@drawable/ic_m"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Height (in cm)"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/BMRWeight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/BMRWeight"
        app:layout_constraintTop_toBottomOf="@+id/BMRWeight" />

    <EditText
        android:id="@+id/BMRAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_height_icon"
        android:drawableEnd="@drawable/ic_m"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/BMRHeight"
        app:layout_constraintStart_toStartOf="@+id/BMRHeight"
        app:layout_constraintTop_toBottomOf="@+id/BMRHeight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculateBMR"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button_color"
        android:fontFamily="@font/poppins_black"
        android:text="@string/calculate"
        android:textColor="#111"
        android:textSize="14sp"
        app:backgroundTint="#FFC098"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMRAge" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint=""
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/mainBG"
        app:layout_constraintEnd_toEndOf="@+id/BMRAge"
        app:layout_constraintStart_toStartOf="@+id/BMRAge"
        app:layout_constraintTop_toBottomOf="@+id/calculateBMR"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/yourbmrID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Your Basal Metabolic Rate is"
        android:textColor="#DE7E5D"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toTopOf="@+id/result" />

    <TextView
        android:id="@+id/bmrTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:fontFamily="@font/poppins_black"
        android:text="(BMR)"
        android:textColor="#111"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/yourbmrID" />

    <TextView
        android:id="@+id/caloriesStatusID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Calories"
        android:textColor="#111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/bmrTextID" />

</androidx.constraintlayout.widget.ConstraintLayout>