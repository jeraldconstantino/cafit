<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoHome">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculatorsBtnID"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginEnd="5sp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:letterSpacing="0"
            android:onClick="launchCalculatorsActivity"
            android:text="CALCULATORS"
            android:textColor="#111111"
            android:textSize="14sp"
            app:backgroundTint="#FFC098"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_calculators_icon"
            app:iconGravity="textTop"
            app:iconPadding="5dp"
            app:iconSize="80sp"
            app:iconTint="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/workoutsBtnID"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="5sp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:letterSpacing="0"
            android:text="  WORKOUTS"
            android:textColor="#111111"
            android:textSize="14sp"
            app:backgroundTint="#FFC098"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_workouts_icon"
            app:iconGravity="textTop"
            app:iconPadding="5dp"
            app:iconSize="80sp"
            app:iconTint="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aboutBtnID"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginEnd="5sp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:letterSpacing="0"
            android:onClick="openAbout"
            android:text="ABOUT"
            android:textColor="#111111"
            android:textSize="14sp"
            app:backgroundTint="#FFC098"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_about_icon"
            app:iconGravity="textTop"
            app:iconPadding="5dp"
            app:iconSize="80sp"
            app:iconTint="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitBtnID"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="5sp"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:letterSpacing="0"
            android:onClick="exitApp"
            android:text="EXIT"
            android:textColor="#111111"
            android:textSize="14sp"
            app:backgroundTint="#FFC098"
            app:cornerRadius="15dp"
            app:icon="@drawable/exit_icon"
            app:iconGravity="textTop"
            app:iconPadding="5dp"
            app:iconSize="80sp"
            app:iconTint="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />
    </GridLayout>

    <ImageView
        android:id="@+id/noAccessID"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="75dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        app:srcCompat="@drawable/password_icon"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>